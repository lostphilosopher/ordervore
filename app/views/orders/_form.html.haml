= form_for(@order) do |f|
  .form-group
    = f.label :restaurant_id
    = f.select 'restaurant_id', options_from_collection_for_select(@restaurants, :id, :name, selected: @order.restaurant ? @order.restaurant.id : nil), class: 'form-control'
    - verb = current_user.admin? ? 'Add' : 'Suggest'
    %br
    = link_to "Can't find your restaurant?", new_restaurant_path
    = link_to "#{verb} it!", new_restaurant_path, class: 'btn btn-primary'
  .form-group
    = f.label :order
    = f.text_field :order, class: 'form-control'
  .form-controls
    = f.submit "Submit", class: 'btn btn-primary'
