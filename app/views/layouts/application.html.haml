!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Ordervore
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %link{:href => "https://fonts.googleapis.com/css?family=Caveat", :rel => "stylesheet"}/
  %body
    .container-fluid
      .row
        .col-sm-6.col-sm-offset-3
          .content
            %h1
              = link_to('Ordervore', root_path)
          .text-center
            - if current_user
              = link_to('Home', root_path, class: 'btn btn-primary')
              = link_to('My Orders', user_path(id: current_user.id), class: 'btn btn-primary')
              = link_to('My Profile', edit_user_registration_path(id: current_user.id), class: 'btn btn-primary' )
              = link_to('Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-primary')
            - else
              = link_to('Sign In / Up', new_user_session_path, class: 'btn btn-lg btn-primary', class: 'btn btn-primary')
      .row
        .col-sm-6.col-sm-offset-3
          = yield
